        <insert id="insertMember" parameterType="com.hielectro.welpair.regist.model.dto.RegistDTO">
        INSERT
        INTO T_MEMBER
            (
            EMP_NO
          , MEM_PWD
          , REGIST_DATE
          , POINT_BALANCE
          , MEM_AUTH
